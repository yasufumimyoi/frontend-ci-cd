{
	"$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
	"vcs": {
	  "enabled": true,
	  "clientKind": "git",
	  "useIgnoreFile": true
	},
	"files": {
	  "ignoreUnknown": true,
	  "ignore": [
		".next",
		"node_modules"
	  ]
	},
	"formatter": {
	  "enabled": true,
	  "lineWidth": 80,
	  "indentWidth": 2
	},
	"linter": {
	  "enabled": true,
	  "rules": {
		"recommended": true
	  }
	}
  }